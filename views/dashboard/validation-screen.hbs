<sction id="validation-page">
  <h1 class="center">Validaci√≥n de colaboraciones</h1>

  <div class="my-list">
    <h5>Architects</h5>

    <div class="row">
      {{#each architects}}
      <div class="card-dsg">

        <figure class="card-img">
          <img src="{{photo}}" alt="{{name}}">
        </figure>

        <div class="card-text">
          <h5 class="center">{{name}}</h5>
          <small><em>{{country}}</em></small>
          <p>{{flagshipWork}}</p>

          <form action="/dashboard/architects/accept/{{_id}}" method="POST">
            <button type="submit" class="my-button mini filled">Aceptar</button>
          </form>
          <form action="/dashboard/architects/reject/{{_id}}" method="POST"><button type="submit"
              class="my-button mini filled">Rechazar</button>
          </form>
        </div>

      </div>

      {{/each}}
    </div>

  </div>

  <div class="my-list">
    <h5>Trends</h5>
    <div class="row">
      {{#each trends}}
      <div class="card-dsg">

        <figure class="card-img">
          <img src="{{picTrend}}" alt="{{name}}">
        </figure>

        <div class="card-text">
          <h5 class="center">{{name}}</h5>
          <small><em>{{country}}</em></small>
          <p>{{bestWork}}</p>
          <p>{{year}}</p>

          <form action="/dashboard/trends/accept/{{_id}}" method="POST"><button type="submit"
              class="my-button mini filled">Aceptar</button>
          </form>
          <form action="/dashboard/trends/reject/{{_id}}" method="POST"><button type="submit"
              class="my-button mini filled">Rechazar</button></form>
        </div>

      </div>
      {{/each}}
    </div>

  </div>

  <div class="my-list">

    <h5>Works</h5>
    <div class="row">
      {{#each works}}
      <div class="card-dsg">

        <figure class="card-img">
          <img src="{{picWork}}" alt="{{name}}">
        </figure>

        <div class="card-text">
          <h5 class="center">{{name}}</h5>
          <small><em>{{country}}</em></small>
          <p>{{year}}</p>

          <form action="/dashboard/works/accept/{{_id}}" method="POST"><button type="submit"
              class="my-button mini filled">Aceptar</button>
          </form>
          <form action="/dashboard/works/reject/{{_id}}" method="POST"><button type="submit"
              class="my-button mini filled">Rechazar</button></form>
        </div>

      </div>

      {{/each}}
    </div>
  </div>

</sction>