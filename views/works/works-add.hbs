<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>Nueva Obra arquitectónica</h2>
        {{#if errorMsg}}
        <div id="errorMsg">{{{errorMsg}}}</div>
        {{/if}}
    </div>
</div>
<form action="/works" method="POST" enctype="multipart/form-data">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="form-group">
                <label for="name">Nombre de la obra</label>
                <input name="name" type="text" class="form-control" id="name">
            </div>
            <div class="form-group">
                <label for="trend-arch">Corriente Arquitectónica</label>
                <select class="custom-select" id="trend-arch" name="trend">
                    <option selected disabled value="">Elige corriente...</option>
                    {{#each trends}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="work">Tipo de Obra</label>
                <select class="custom-select" id="work" name="workType">
                    <option selected disabled value="">Elige tipo de obra...</option>
                    <option>Parque</option>
                    <option>Espacio Público</option>
                    <option>Vivienda</option>
                    <option>Religiosa</option>
                    <option>Edificio público</option>
                </select>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label for="architect">Arquitecto</label>
                <select class="custom-select" id="architect" name="architect">
                    <option selected disabled value="">Elige un arquitecto...</option>
                    {{#each archs}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label for="country">País</label>
                        <input name="country" type="text" class="form-control" id="country">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="finishedin">Año*</label>
                        <input name="finished" type="text" class="form-control" id="finishedin">
                    </div>
                </div>
            </div>
            <div class="custom-file form-group">
                <label class="custom-file-label" for="customFile">Foto de la obra</label>
                <input type="file" class="custom-file-input btn" id="customFile" name="picWork">
            </div>
            {{!-- Small is a placeholder until scripting a popover --}}
            <small>*Año de finalización</small>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="form-group">
                <label for="address">Dirección</label>
                <input name="address" type="text" class="form-control" id="address"
                    placeholder="Introduzca una dirección postal">
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="form-group">
                <label for="description">Descripción</label>
                <textarea name="description" id="description" rows="5" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <button type="submit" class="btn btn-dark btn-block btn-lg">Añadir</button>
        </div>
    </div>
</form>