<h1>Este es el index de arquitectos</h1>

<a href="/architect/new-arch" class="btn btn-info">Añadir arquitectos</a>

{{#each archsFound}}

<div class="card mb-3" style="max-width: 540px;">
	<div class="row no-gutters">
        
		<div class="col-md-4">
			<img src="{{ picArch }}" class="card-img" alt="..." />
        </div>
        
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">{{ name }}</h5>
				<h5 class="card-title">Obra más representativa: {{ bestWork }}</h5>
				<a href="/architect/{{id}}" class="btn btn-info">Ver detalles</a>
			</div>
		</div>
	</div>
</div>

{{/each}}
