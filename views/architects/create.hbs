<section class="form-page">

  <h2 class="center">New architect</h2>

  <form action="/architects/create" method="POST" enctype="multipart/form-data">

    <label for="name">Nombre</label>
    <input name="name" type="text" class="form-control" id="name">

    <label for="country">País de procedencia</label>
    <input name="country" type="text" class="form-control" id="country">

    <label for="flagship-work">Obra más conocida</label>
    <input name="flagshipWork" type="text" class="form-control" id="flagship-work">

    <input type="file" class="upload-file" name="photo-arch">
    <div class="row justify-content-center">
      <button type="submit" class="my-button main filled">Añadir Nuevo</button>
    </div>
    {{#if errorMsg}}
    <div id="errorMsg">{{{errorMsg}}}</div>
    {{/if}}

  </form>
  <a href="/architects" class="my-button nolined">Cancelar y volver</a>

</section>