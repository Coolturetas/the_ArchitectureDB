<h2>{{name}}</h2>

<div class="row">
  <div class="col-6">
    <img src="{{photo}}" alt="{{name}}">
    <p>Country: {{country}}</p>
    <p>Flagship work: {{flagshipWork}}</p>
    <p>Works</p>
    <ul>
      {{#each works}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <div class="d-flex justify-content-left">
      <a href="/architects/edit/{{_id}}" class="btn btn-dark">Edit</a>
      <form action="/architects/delete/{{_id}}" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>