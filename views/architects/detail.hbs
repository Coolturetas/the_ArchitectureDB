<h2>{{arch.name}}</h2>

<div class="row">
  <div class="col-6">
    <img src="{{arch.photo}}" alt="{{arch.name}}">
    <p>Country: {{arch.country}}</p>
    <p>Flagship work: {{arch.flagshipWork}}</p>
    <p>Works</p>
    <ul>
      {{#each works}}
      <li><a href="/works/show/{{id}}">{{name}}</a></li>
      {{/each}}
    </ul>
    <div class="d-flex justify-content-left">
      <a href="/architects/edit/{{arch.id}}" class="btn btn-dark">Edit</a>
      <form action="/architects/delete/{{arch.id}}" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>

<h2>Comentarios</h2>
<div class="row">

  <form action="/architects/post-comment/{{arch.id}}" method="POST">

    <label for="subject">Asunto</label>
    <input type="text" name="subject" id="subject" class="form-control">

    <label for="comment">Deja tu comentario</label>
    <textarea class="form-control" id="comment" rows="4" cols="100" name="content"></textarea>

    <button type="submit">Guardar comentario</button>

  </form>

</div>

<h2>Otros comentaron...</h2>
<div class="row">
  {{#each posts}}
  <div class="col-md-6">
    <h5>By: {{creatorId.username}}</h5>
    <h6>Dijo esto: {{subject}}</h6>
    <p>{{content}}</p>
    <div class="d-flex justify-content-left align-items-center">
      <a href="/architects/post-comment/edit/{{id}}" class="btn btn-dark">Editar</a>
      <form action="/architects/post-comment/delete/{{id}}" method="post">
        <button type="submit" class="btn btn-danger">Borrar</button>
      </form>
    </div>
  </div>

  {{/each}}
</div>